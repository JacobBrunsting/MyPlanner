<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">
<!--
    <AutoCompleteTextView
-->
    <EditText
        android:id="@+id/tag_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/text_element_horizontal_margin"
        android:layout_toStartOf="@+id/accept_tag_button"
        android:completionThreshold="1"
        android:inputType=""
        android:hint="@string/add_note_tag_hint"
        android:lines="1"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:dropDownHeight="wrap_content"
        android:dropDownWidth="match_parent"/>

    <Button
        android:id="@+id/accept_tag_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:text="@string/accept_note_tag_btn_txt" />
</RelativeLayout>
