<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_note_list_filter_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag:"
            android:id="@+id/textView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/text_element_vertical_margin"
            android:layout_marginBottom="@dimen/text_element_vertical_margin"
            android:layout_marginRight="@dimen/text_element_horizontal_margin" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/note_filter_tag_selector"
            android:spinnerMode="dropdown"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/text_element_vertical_margin"
            android:layout_marginBottom="@dimen/text_element_vertical_margin" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_divider_height"
        android:background="@color/colorPrimary"
        android:adjustViewBounds="true"
        android:id="@+id/imageView3" />
</LinearLayout>