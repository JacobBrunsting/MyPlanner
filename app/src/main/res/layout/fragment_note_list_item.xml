<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/note_list_item"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/note_title_txt"
        android:text="TITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_element_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_marginRight="@dimen/text_element_horizontal_margin"
        android:layout_marginLeft="@dimen/text_element_horizontal_margin" />

    <TextView
        android:id="@+id/note_body_txt"
        android:text="lorum ipsum dolar est is sti situatoria si skfs ksk lsielskdkn ls kksks ksls fja a good boy say a s add ladd lsi liaaaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/text_element_vertical_margin"
        android:layout_marginBottom="@dimen/text_element_vertical_margin"
        android:layout_marginRight="@dimen/text_element_horizontal_margin"
        android:layout_marginLeft="@dimen/text_element_horizontal_margin" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/notes_tag_btn_height"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/note_title_txt"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/text_element_horizontal_margin"
        android:layout_marginRight="@dimen/text_element_horizontal_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/note_button_holder_layout">

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>