<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/space"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/main_divider_height"
        android:layout_marginRight="@dimen/main_divider_height"
        android:adjustViewBounds="true"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/text_element_vertical_margin"
        android:layout_marginRight="@dimen/text_element_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/text_element_vertical_margin"
        android:layout_toStartOf="@+id/date_text"
        android:text="TITLE"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/time_text"
        android:layout_marginLeft="@dimen/text_element_horizontal_margin"
        android:layout_marginRight="@dimen/text_element_horizontal_margin"
        android:layout_toStartOf="@+id/time_text"
        android:text="April 25, 2016"
        android:textSize="@dimen/abc_text_size_caption_material" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="@dimen/reminder_time_txt_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/text_element_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/text_element_horizontal_margin"
        android:layout_marginRight="@dimen/text_element_horizontal_margin"
        android:layout_marginTop="@dimen/text_element_vertical_margin"
        android:maxLines="1"
        android:text="12:00 AM"
        android:textAlignment="textEnd"
        android:textSize="@dimen/abc_text_size_medium_material" />

    <TextView
        android:id="@+id/body_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_text"
        android:layout_marginBottom="@dimen/text_element_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="Body text here"
        android:textSize="@dimen/abc_text_size_small_material" />

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_divider_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/body_text"
        android:adjustViewBounds="true" />

</RelativeLayout>